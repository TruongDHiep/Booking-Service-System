<?xml version="1.0"?>
<odoo>
  <data>
    <record id="cron_appointment_reminders" model="ir.cron">
      <field name="name">Send Appointment Reminders</field>
      <field name="model_id" ref="model_service_appointment"/>
      <field name="state">code</field>
      <field name="code">model._cron_send_reminders()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="active">False</field>
    </record>

    <record id="cron_completion_notifications" model="ir.cron">
      <field name="name">Send Completion Notifications</field>
      <field name="model_id" ref="model_service_appointment"/>
      <field name="state">code</field>
      <field name="code">model._cron_send_completions()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="active">False</field>
    </record>
  </data>
</odoo>