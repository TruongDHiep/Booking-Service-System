<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Tree View: Service List -->
  <record id="booking_service_view_tree" model="ir.ui.view">
    <field name="name">booking.service.view.tree</field>
    <field name="model">booking.service</field>
    <field name="arch" type="xml">
      <list string="Services">
        <field name="name"/>
        <field name="duration" widget="float_time"/>
        <field name="price" widget="monetary"/>
        <field name="currency_id" column_invisible="1"/>
        <field name="active" widget="boolean_toggle"/>
      </list>
    </field>
  </record>

  <!-- Form View: Service Details -->
  <record id="booking_service_view_form" model="ir.ui.view">
    <field name="name">booking.service.view.form</field>
    <field name="model">booking.service</field>
    <field name="arch" type="xml">
      <form string="Service">
        <sheet>
          <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
            invisible="active"/>

          <field name="image" widget="image" class="oe_avatar"/>

          <div class="oe_title">
            <label for="name"/>
            <h1>
              <field name="name" placeholder="e.g. Hair Cut, Spa Treatment"/>
            </h1>
          </div>

          <group>
            <group name="service_info" string="Service Information">
              <field name="duration" widget="float_time"/>
              <field name="price" widget="monetary"/>
              <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
              <field name="product_id" options="{'no_create': True}"/>
            </group>

            <group name="booking_capacity" string="Booking Capacity">
              <field name="max_concurrent_bookings"/>
            </group>
          </group>

          <group>
            <group name="status" string="Status">
              <field name="active" widget="boolean_toggle"/>
            </group>
          </group>

          <notebook>
            <page name="description" string="Description">
              <field name="description" placeholder="Enter brief description of the service..."/>
            </page>
            <page name="detailed_description" string="Detailed Description (HTML)">
              <field name="description_html" widget="html"
                placeholder="Enter detailed description with formatting (displayed on service detail page)..."/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Search View: Filters and Grouping -->
  <record id="booking_service_view_search" model="ir.ui.view">
    <field name="name">booking.service.view.search</field>
    <field name="model">booking.service</field>
    <field name="arch" type="xml">
      <search string="Search Services">
        <field name="name" string="Service"
          filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>

        <filter name="filter_active" string="Active"
          domain="[('active', '=', True)]"/>
        <filter name="filter_archived" string="Archived"
          domain="[('active', '=', False)]"/>

        <separator/>

        <filter name="filter_price_low" string="Price: Low to High"
          context="{'orderby': 'price'}"/>
        <filter name="filter_price_high" string="Price: High to Low"
          context="{'orderby': 'price desc'}"/>

        <group expand="0" string="Group By">
          <filter name="group_currency" string="Currency"
            context="{'group_by': 'currency_id'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Action: Service Menu Action -->
  <record id="booking_service_action" model="ir.actions.act_window">
    <field name="name">Services</field>
    <field name="res_model">booking.service</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'search_default_filter_active': 1}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face"> Create your first service! </p>
      <p> Define services that customers can book through your system. Each service includes
        pricing, duration, and descriptive information. </p>
    </field>
  </record>

</odoo>